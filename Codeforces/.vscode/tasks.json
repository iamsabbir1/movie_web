{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Customize Build",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
				"|",
				"${fileBasenameNoExtension}.exe",
				"<",
				"input.txt",
				">",
				"output.txt"
				
				
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
			"detail": "Generated task by vscode",
			"options":{
				"shell":{
					"executable": "cmd.exe",
					
				}
			}
			
        },
    ]
}